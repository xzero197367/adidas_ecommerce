@model List<Adidas.DTOs.Feature.CouponDTOs.CouponDto>

@{
    ViewData["Title"] = "Manage Discounts";
}


<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <!-- Main Content -->
        <div class="col-md-12 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2>Manage Discounts</h2>
                    <p class="text-muted">Create and manage coupon codes and promotional offers</p>
                </div>
                <button class="btn btn-dark" onclick="window.location.href='@Url.Action("Create", "Coupon")'">
                    <i class="fas fa-plus"></i> Create New Coupon
                </button>
            </div>


            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted">Active Coupons</h6>
                                    <h3 class="mb-0">@ViewBag.ActiveCount</h3>
                                </div>
                                <i class="fas fa-ticket-alt fa-2x text-primary"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted">Total Usage</h6>
                                    <h3 class="mb-0">@ViewBag.TotalUsage.ToString("N0")</h3>
                                </div>
                                <i class="fas fa-chart-line fa-2x text-success"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted">Total Savings</h6>
                                    <h3 class="mb-0">$@ViewBag.TotalSavings.ToString("N0")</h3>
                                </div>
                                <i class="fas fa-dollar-sign fa-2x text-warning"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted">Expired</h6>
                                    <h3 class="mb-0">@ViewBag.ExpiredCount</h3>
                                </div>
                                <i class="fas fa-clock fa-2x text-danger"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Filters -->
            <div class="card-header">
                <form method="get" asp-action="Index" asp-controller="Coupon">
                    <div class="row">
                        <!-- Search -->
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Search Coupons</label>
                                <input type="text" name="search" class="form-control"
                                       placeholder="Search by code..."
                                       value="@ViewBag.Search" />
                            </div>
                        </div>

                        <!-- Status -->
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Status</label>
                                <select name="status" class="form-control">
                                    <option value="All" selected="@(ViewBag.Status == "All")">All</option>
                                    <option value="Active" selected="@(ViewBag.Status == "Active")">Active</option>
                                    <option value="Expired" selected="@(ViewBag.Status == "Expired")">Expired</option>
                                    <option value="Inactive" selected="@(ViewBag.Status == "Inactive")">Inactive</option>
                                </select>
                            </div>
                        </div>

                        <!-- Filter Button -->
                        <div class="col-md-2">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-dark btn-block">
                                <i class="fas fa-filter"></i> Apply
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Coupons Table -->
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Coupon Codes</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>CODE</th>
                                    <th>TYPE</th>
                                    <th>DISCOUNT</th>
                                    <th>USAGE</th>
                                    <th>EXPIRY DATE</th>
                                    <th>STATUS</th>
                                    <th>ACTIONS</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var coupon in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-dark rounded-pill px-3 py-2">@coupon.Code</span>
                                        </td>
                                        <td>@coupon.DiscountType</td>
                                        <td>
                                            @if (coupon.DiscountType.ToString().Equals("Percentage", StringComparison.OrdinalIgnoreCase))
                                            {
                                                <text>@coupon.DiscountValue%</text>
                                            }
                                            else
                                            {
                                                <text>$@coupon.DiscountValue</text>
                                            }
                                        </td>
                                        <td>
                                            @coupon.UsedCount / @(coupon.UsageLimit == 0 ? "∞" : coupon.UsageLimit.ToString())
                                        </td>
                                        <td>@coupon.ValidTo.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            @if (coupon.IsExpired)
                                            {
                                                <span class="badge bg-danger">Expired</span>
                                            }
                                            else if (coupon.IsActive && coupon.IsValidNow)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">

                                                <a href="@Url.Action("Details", "Coupon", new { id = coupon.Id })"
                                                   class="btn btn-outline-primary btn-sm" title="Details">
                                                    <i class="fas fa-info-circle"></i>

                                                </a>


                                                <a href="@Url.Action("Edit", "Coupon", new { id = coupon.Id })"
                                                   class="btn btn-outline-primary btn-sm" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                @if (!coupon.IsExpired)
                                                {
                                                    <form method="post" action="@Url.Action("ToggleStatus", "Coupon")" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@coupon.Id" />
                                                        <button type="submit"
                                                                class="btn btn-outline-@(coupon.IsActive ? "warning" : "success") btn-sm"
                                                                title="@(coupon.IsActive ? "Deactivate" : "Activate")">
                                                            <i class="fas fa-@(coupon.IsActive ? "pause" : "play")"></i>
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-secondary btn-sm" title="Expired - Cannot activate" disabled>
                                                        <i class="fas fa-play"></i>
                                                    </button>
                                                }


                                                <a href="#" class="btn btn-sm btn-outline-danger me-1" data-bs-toggle="modal"
                                                   data-bs-target="#deleteModal-@coupon.Id" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>


                                            </div>
                                        </td>
                                    </tr>
                                    <div class="modal fade" id="deleteModal-@coupon.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@coupon.Id" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title" id="deleteModalLabel-@coupon.Id">Confirm Delete</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to delete the Coupon : <strong>@coupon.Name</strong>?</p>
                                                    @* @if (category.SubCategories != null && category.SubCategories.Any()) *@
                                                    @* { *@
                                                    @*     <div class="alert alert-warning"> *@
                                                    @*         <i class="fas fa-exclamation-triangle me-2"></i> *@
                                                    @*         This category has @coupon.SubCategories.Count() subcategories that will also be deleted! *@
                                                    @*     </div> *@
                                                    @* } *@
                                                    <p class="text-danger">This action cannot be undone.</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form asp-action="Delete" asp-controller="Coupon" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@coupon.Id" />
                                                        <button type="submit" class="btn btn-danger">
                                                            <i class="fas fa-trash me-1"></i> Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Pagination -->
            @if (ViewBag.TotalPages > 1)
            {
                <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, status = ViewBag.Status, page = ViewBag.CurrentPage - 1 })">Previous</a>
                        </li>

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, status = ViewBag.Status, page = i })">@i</a>
                            </li>
                        }

                        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="@Url.Action("Index", new { search = ViewBag.Search, status = ViewBag.Status, page = ViewBag.CurrentPage + 1 })">Next</a>
                        </li>
                    </ul>
                </nav>
            }

            <p class="text-muted text-center mt-3">
                Showing @((ViewBag.CurrentPage - 1) * 10 + 1) to @Math.Min(ViewBag.CurrentPage * 10, Model.Count) of @Model.Count results
            </p>
        </div>
    </div>
</div>

<!-- Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>


    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }

    .table th {
        font-weight: 600;
        font-size: 0.875rem;
        color: #6c757d;
        text-transform: uppercase;
        border-bottom: 2px solid #dee2e6;
    }

    .btn-group .btn {
        border-radius: 0.375rem !important;
        margin-right: 2px;
    }
</style>
