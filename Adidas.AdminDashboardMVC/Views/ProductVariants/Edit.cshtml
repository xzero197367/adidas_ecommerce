@model Adidas.DTOs.Main.Product_Variant_DTOs.UpdateProductVariantDto
@{
    ViewData["Title"] = "Edit Product Variant";
}

<!-- Custom CSS -->
<style>
    .edit-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
