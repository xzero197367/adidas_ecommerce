
@using Adidas.Models.Operation
@model Adidas.DTOs.Operation.OrderDTOs.Create.OrderCreateDto;

@{
    ViewData["Title"] = "Create Order";
}

<header class="order_top_bar">
    <div class="left">
        <h1>Create New Order</h1>
        <span>Fill in the details to create a new customer order</span>
    </div>
</header>

<section class="content">
    <form asp-action="CreateOrder" asp-controller="Orders" method="post" class="form-horizontal">
