        @* </div> *@

        <div class="form-group">
            <label asp-for="OrderStatus" class="control-label"></label>
            <select asp-for="OrderStatus" asp-items="Html.GetEnumSelectList<OrderStatus>()" class="form-control">
                <option value="">Select Status</option>
            </select>
            <span asp-validation-for="OrderStatus" class="text-danger"></span>
        </div>

        @* <div class="form-group"> *@
        @*     <label asp-for="Subtotal" class="control-label"></label> *@
        @*     <input asp-for="Subtotal" class="form-control" type="number" step="0.01" /> *@
        @*     <span asp-validation-for="Subtotal" class="text-danger"></span> *@
        @* </div> *@

        <div class="form-group">
            <label asp-for="TaxAmount" class="control-label"></label>
            <input asp-for="TaxAmount" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="TaxAmount" class="text-danger"></span>
        </div>

        @* <div class="form-group"> *@
        @*     <label asp-for="ShippingAmount" class="control-label"></label> *@
