@using Adidas.DTOs.Operation.OrderDTOs
@using Adidas.Models.Operation
@model OrderDto

@{
    ViewData["Title"] = $"Delete Order - {Model.OrderNumber}";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete Order Confirmation
                    </h3>
                </div>
                
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <h5 class="alert-heading">
                            <i class="fas fa-warning"></i> Warning!
                        </h5>
                        <p>You are about to permanently delete this order. This action cannot be undone!</p>
                        <hr>
                        <p class="mb-0">Please review the order details below before confirming the deletion.</p>
                    </div>

                    <!-- Order Summary -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Order Information</h5>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <th>Order Number:</th>
                                    <td><strong>@Model.OrderNumber</strong></td>
                                </tr>
                                <tr>
                                    <th>Status:</th>
                                    <td>
                                        @{
                                            string badgeClass = Model.OrderStatus switch
                                            {
                                                OrderStatus.Pending => "badge-warning",
                                                OrderStatus.Processing => "badge-info",
                                                OrderStatus.Shipped => "badge-primary",
                                                OrderStatus.Delivered => "badge-success",
                                                OrderStatus.Cancelled => "badge-danger",
                                                _ => "badge-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@Model.OrderStatus</span>
                                    </td>
                                </tr>
                                <tr>
                                    <th>Order Date:</th>
                                    <td>@Model.OrderDate.ToString("MMM dd, yyyy 'at' HH:mm")</td>
                                </tr>
                                <tr>
                                    <th>Total Amount:</th>
                                    <td><strong>@Model.TotalAmount.ToString("C") @Model.Currency</strong></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h5>Customer Information</h5>
                            <table class="table table-sm table-borderless">
                                <tr>
                                    <th>Customer Name:</th>
                                    <td>@Model.UserName</td>
                                </tr>
                                <tr>
                                    <th>Email:</th>
                                    <td>@Model.UserEmail</td>
                                </tr>
                                <tr>
                                    <th>User ID:</th>
                                    <td><code>@Model.UserId</code></td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <!-- Financial Details -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5>Financial Breakdown</h5>
                            <div class="table-responsive">
                                <table class="table table-sm table-striped">
                                    <tr>
                                        <td>Subtotal:</td>
                                        <td class="text-right">@Model.Subtotal.ToString("C")</td>
                                    </tr>
                                    <tr>
                                        <td>Tax Amount:</td>
                                        <td class="text-right">@Model.TaxAmount.ToString("C")</td>
                                    </tr>
                                    <tr>
                                        <td>Shipping Amount:</td>
                                        <td class="text-right">@Model.ShippingAmount.ToString("C")</td>
                                    </tr>
                                    @if (Model.DiscountAmount > 0)
                                    {
                                        <tr>
                                            <td>Discount:</td>
                                            <td class="text-right text-success">-@Model.DiscountAmount.ToString("C")</td>
                                        </tr>
                                    }
                                    <tr class="font-weight-bold border-top">
                                        <td>Total:</td>
                                        <td class="text-right">@Model.TotalAmount.ToString("C")</td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Additional Information -->
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5>Order Notes</h5>
                                <div class="alert alert-info">
                                    @Model.Notes
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Deletion Impact Warning -->
                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading">Deletion Impact:</h6>
                        <ul class="mb-0">
                            <li>All order items associated with this order will be removed</li>
                            <li>Payment records linked to this order will be affected</li>
                            <li>Customer order history will be updated</li>
                            <li>Inventory adjustments may need to be made manually</li>
                            <li>This action will be logged in the system audit trail</li>
                        </ul>
                    </div>

                    <!-- Alternative Actions -->
                    <div class="alert alert-info" role="alert">
                        <h6 class="alert-heading">Alternative Actions:</h6>
                        <p class="mb-0">
                            Instead of deleting, consider:
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="alert-link">changing the status to Cancelled</a>
                            or adding notes to explain why the order is no longer valid.
                        </p>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-6">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Order Details
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary ml-2">
                                <i class="fas fa-list"></i> Back to Orders List
                            </a>
                        </div>
                        <div class="col-md-6 text-right">
                            <form asp-action="Delete" asp-controller="Orders" asp-route-id="@Model.Id" method="post" class="d-inline" id="deleteForm">
                                <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                                    <i class="fas fa-trash"></i> Confirm Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border-danger">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">
                    <i class="fas fa-exclamation-triangle"></i> Final Confirmation
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p><strong>Are you absolutely sure you want to delete order @Model.OrderNumber?</strong></p>
                <p>Type the order number below to confirm:</p>
                <div class="form-group">
                    <input type="text" class="form-control" id="confirmOrderNumber" placeholder="Enter order number">
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="confirmUnderstood">
                    <label class="form-check-label" for="confirmUnderstood">
                        I understand that this action cannot be undone
                    </label>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="finalDeleteBtn" disabled onclick="submitDelete()">
                    <i class="fas fa-trash"></i> Delete Forever
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            $('#confirmDeleteModal').modal('show');
        }

        function submitDelete() {
            document.getElementById('deleteForm').submit();
        }

        // Enable delete button only when conditions are met
        function checkDeleteConditions() {
            const orderNumber = document.getElementById('confirmOrderNumber').value;
            const understood = document.getElementById('confirmUnderstood').checked;
            const deleteBtn = document.getElementById('finalDeleteBtn');
            
            deleteBtn.disabled = !(orderNumber === '@Model.OrderNumber' && understood);
        }

        // Add event listeners
        document.getElementById('confirmOrderNumber').addEventListener('input', checkDeleteConditions);
        document.getElementById('confirmUnderstood').addEventListener('change', checkDeleteConditions);

        // Clear modal when hidden
        $('#confirmDeleteModal').on('hidden.bs.modal', function () {
            document.getElementById('confirmOrderNumber').value = '';
            document.getElementById('confirmUnderstood').checked = false;
            checkDeleteConditions();
        });

        // Prevent accidental form submission
        document.getElementById('deleteForm').addEventListener('submit', function(e) {
            e.preventDefault();
            confirmDelete();
        });
    </script>
}

@section Styles {
    <style>
        .card.border-danger {
            border-width: 2px !important;
        }
        
        .modal-content.border-danger {
            border-width: 2px !important;
        }
        
        .alert-heading {
            margin-bottom: 0.5rem;
        }
        
        .table-borderless th,
        .table-borderless td {
            border: none;
            padding: 0.25rem 0.75rem;
        }
        
        .table-borderless th {
            width: 40%;
            font-weight: 600;
        }
    </style>
}