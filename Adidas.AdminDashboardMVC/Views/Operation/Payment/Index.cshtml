@using Adidas.DTOs.Operation.PaymentDTOs
@using Adidas.DTOs.Common_DTOs;
@model PagedResultDto<PaymentDto>
@{
    ViewData["Title"] = "Payment Management";
    var filter = ViewBag.Filter as PaymentFilterDto;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title">Payment Management</h3>
                    <div class="btn-group">
                        <a asp-action="Create" asp-controller="Payment" class="btn btn-primary">
                            <i class="fas fa-plus"></i> New Payment
                        </a>
                        <a asp-action="Dashboard" asp-controller="Payment" class="btn btn-info">
                            <i class="fas fa-chart-bar"></i> Dashboard
                        </a>
                        <a asp-action="Reports" asp-controller="Payment" class="btn btn-secondary">
                            <i class="fas fa-file-alt"></i> Reports
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Filter Form -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <form method="get" asp-action="Index" asp-controller="Payment" class="row g-3">
                                <div class="col-md-2">
                                    <label class="form-label">Status</label>
                                    <select name="Status" class="form-select">
                                        <option value="">All Statuses</option>
                                        @foreach (var status in (List<string>)ViewBag.PaymentStatuses)
                                        {
                                            <option value="@status" selected="@(filter?.Status == status)">@status</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Payment Method</label>
                                    <select name="PaymentMethod" class="form-select">
                                        <option value="">All Methods</option>
                                        @foreach (var method in (List<string>)ViewBag.PaymentMethods)
                                        {
                                            <option value="@method" selected="@(filter?.PaymentMethod == method)">@method</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Start Date</label>
                                    <input type="date" name="StartDate" class="form-control" value="@filter?.StartDate?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">End Date</label>
                                    <input type="date" name="EndDate" class="form-control" value="@filter?.EndDate?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">Transaction ID</label>
                                    <input type="text" name="TransactionId" class="form-control" value="@filter?.TransactionId" placeholder="Transaction ID" />
                                </div>
                                <div class="col-md-2">
                                    <label class="form-label">&nbsp;</label>
                                    <div>
                                        <button type="submit" class="btn btn-primary">Filter</button>
                                        <a asp-action="Index" class="btn btn-secondary">Clear</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Payments Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Transaction ID</th>
                                    <th>Amount</th>
                                    <th>Payment Method</th>
                                    <th>Status</th>
                                    <th>Order ID</th>
                                    <th>Processed At</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Items.Any())
                                {
                                    @foreach (var payment in Model.Items)
                                    {
                                        <tr>
                                            <td>@payment.TransactionId</td>
                                            <td>@payment.Amount.ToString("C")</td>
                                            <td>@payment.PaymentMethod</td>
                                            <td>
                                                <span class="badge bg-@GetStatusBadgeClass(payment.PaymentStatus)">
                                                    @payment.PaymentStatus
                                                </span>
                                            </td>
                                            <td>@payment.OrderId</td>
                                            <td>@payment.ProcessedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-action="Details" asp-route-id="@payment.Id" 
                                                       class="btn btn-outline-primary" title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (payment.PaymentStatus == "Completed")
                                                    {
                                                        <button type="button" class="btn btn-outline-warning" 
                                                                onclick="showRefundModal('@payment.Id', @payment.Amount)" title="Refund">
                                                            <i class="fas fa-undo"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center">No payments found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalCount > Model.PageSize)
                    {
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center">
                                <!-- Pagination logic here -->
                            </ul>
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Refund Modal -->
<div class="modal fade" id="refundModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="refundForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <h5 class="modal-title">Refund Payment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Refund Amount</label>
                        <input type="number" name="refundAmount" id="refundAmount" class="form-control" step="0.01" />
                        <small class="form-text text-muted">Leave empty for full refund</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">Process Refund</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showRefundModal(paymentId, maxAmount) {
            document.getElementById('refundForm').action = '/Payment/Refund/' + paymentId;
            document.getElementById('refundAmount').setAttribute('max', maxAmount);
            document.getElementById('refundAmount').setAttribute('placeholder', 'Max: $' + maxAmount);
            new bootstrap.Modal(document.getElementById('refundModal')).show();
        }
    </script>
}

@{
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Completed" => "success",
            "Pending" => "warning",
            "Failed" => "danger",
            "Refunded" => "info",
            _ => "secondary"
        };
    }
}