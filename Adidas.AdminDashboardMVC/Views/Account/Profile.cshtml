@model Adidas.AdminDashboardMVC.ViewModels.Account.UserProfileViewModel

@{
    ViewData["Title"] = "Your Profile";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Your Profile</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active">Your Profile</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- Profile Card -->
            <div class="col-md-4">
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">

                        <h3 class="profile-username text-center">@Model.Email</h3>

                        <p class="text-muted text-center">
                            <span class="badge badge-@(Model.Role == "Admin" ? "danger" : "info")">
                                @Model.Role
                            </span>
                        </p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>Status</b>
                                <span class="float-right">
                                    <span class="badge badge-@(Model.IsActive ? "success" : "secondary")">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </span>
                            </li>
                            <li class="list-group-item">
                                <b>Email Verified</b>
                                <span class="float-right">
                                    <span class="badge badge-@(Model.EmailConfirmed ? "success" : "warning")">
                                        @(Model.EmailConfirmed ? "Verified" : "Pending")
                                    </span>
                                </span>
                            </li>
                            <li class="list-group-item">
                                <b>Member Since</b>
                                <span class="float-right">@Model.CreatedAt?.ToString("MMM yyyy")</span>
                            </li>
                        </ul>

                        <a asp-action="ChangePassword" class="btn btn-warning btn-block">
                            <i class="fas fa-key"></i> Change Password
                        </a>
                        <a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary btn-block">
                            <i class="fas fa-arrow-left"></i> Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <!-- Profile Information -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item">
                                <a class="nav-link active" href="#profile" data-toggle="tab">Profile Information</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <!-- Profile Tab -->
                            <div class="active tab-pane" id="profile">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email</label>
                                            <p class="form-control-static">@Model.Email</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Phone Number</label>
                                            <p class="form-control-static">@(Model.PhoneNumber ?? "Not provided")</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Date of Birth</label>
                                            <p class="form-control-static">
                                                @(Model.DateOfBirth?.ToString("MMM dd, yyyy") ?? "Not provided")
                                            </p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Gender</label>
                                            <p class="form-control-static">@(Model.Gender.ToString() ?? "Not specified")</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Preferred Language</label>
                                            <p class="form-control-static">@(Model.PreferredLanguage ?? "Not set")</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Role</label>
                                            <p class="form-control-static">
                                                <span class="badge badge-@(Model.Role == "Admin" ? "danger" : "info")">
                                                    @Model.Role
                                                </span>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Created At</label>
                                            <p class="form-control-static">@Model.CreatedAt?.ToString("MMM dd, yyyy HH:mm")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
