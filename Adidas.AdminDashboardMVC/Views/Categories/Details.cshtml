@model Adidas.DTOs.Separator.Category_DTOs.CategoryDto

@{
    ViewData["Title"] = "Category Details: " + Model.Name;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Category Details: @Model.Name</h2>
        <div>
            <a asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id" class="btn btn-warning me-2" title="Edit Category">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
            <a asp-action="Index" asp-controller="Categories" class="btn btn-secondary">Back to Categories List</a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card p-4 shadow-sm">
        <div class="row">
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Category Image" class="img-fluid rounded border shadow-sm mb-3" style="max-width: 250px; object-fit: cover;" />
                }
                else
                {
                    <div class="card bg-light text-muted d-flex align-items-center justify-content-center mb-3" style="max-width: 250px; height: 200px; margin: 0 auto; border: 1px dashed #ccc;">
                        <span>No Image Available</span>
                    </div>
                }
                <p class="h5 mb-1 mt-2"><strong>@Model.Name</strong></p>
                <small class="text-muted">Slug: @Model.Slug</small>
            </div>

            <div class="col-md-8">
                <dl class="row mb-4">
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>

                    <dt class="col-sm-3">Sort Order:</dt>
                    <dd class="col-sm-9">@Model.SortOrder</dd>

                    <dt class="col-sm-3">Parent Category:</dt>
                    <dd class="col-sm-9">
                        @if (Model.ParentCategory != null)
                        {
                            <a asp-action="Details" asp-controller="Categories" asp-route-id="@Model.ParentCategory.Id">@Model.ParentCategory.Name</a>
                            <small class="text-muted">(@Model.ParentCategory.Slug)</small>
                        }
                        else
                        {
                            <span>None (Main Category)</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">Subcategories</h4>
            @if (Model.SubCategories != null && Model.SubCategories.Any())
            {
                <div class="table-responsive mb-4">
                    <table class="table table-sm table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>IMAGE</th>
                                <th>NAME</th>
                                <th>DESCRIPTION</th>
                                <th>SLUG</th>
                                <th>SORT ORDER</th>
                                <th>STATUS</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subCategory in Model.SubCategories)
                            {
                                <tr>
                                    <td>
                                        @if (!string.IsNullOrEmpty(subCategory.ImageUrl))
                                        {
                                            <img src="@subCategory.ImageUrl" alt="@subCategory.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <img src="https://via.placeholder.com/50" alt="No Image" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                        }
                                    </td>
                                    <td>
                                        <strong>@subCategory.Name</strong><br />
                                        <small>Sub-category</small>
                                    </td>
                                    <td>@(string.IsNullOrEmpty(subCategory.Description) ? "N/A" : (subCategory.Description.Length > 50 ? subCategory.Description.Substring(0, 50) + "..." : subCategory.Description))</td>
                                    <td>@subCategory.Slug</td>
                                    <td>@subCategory.SortOrder</td>
                                    <td class="text-success fw-bold">
                                        @(subCategory.IsActive ? "✓" : "✗")
                                    </td>
                                    <td class="text-nowrap">
                                        <a asp-action="Details" asp-controller="Categories" asp-route-id="@subCategory.Id" class="btn btn-sm btn-outline-info me-1" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-controller="Categories" asp-route-id="@subCategory.Id" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@subCategory.Id" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                        <form asp-action="ToggleStatus" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@subCategory.Id" />
                                            <button type="submit" class="btn btn-sm @(subCategory.IsActive ? "btn-outline-secondary" : "btn-outline-success")" title="@(subCategory.IsActive ? "Deactivate" : "Activate")">
                                                <i class="@(subCategory.IsActive ? "bi bi-x-circle" : "bi bi-check-circle")"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal-@subCategory.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@subCategory.Id" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="deleteModalLabel-@subCategory.Id">Confirm Delete Subcategory</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete the subcategory <strong>@subCategory.Name</strong>?</p>
                                                @if (subCategory.SubCategories?.Count > 0)
                                                {
                                                    <div class="alert alert-warning">
                                                        <i class="fas fa-exclamation-triangle me-2"></i> This subcategory has @subCategory.SubCategories.Count nested subcategories that will also be deleted!
                                                    </div>
                                                }
                                                <p class="text-danger">This action cannot be undone.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Delete" asp-controller="Categories" method="post">
                                                    <input type="hidden" name="id" value="@subCategory.Id" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="fas fa-trash me-1"></i> Delete Subcategory
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No subcategories for this category.</p>
            }
        </div>
    </div>

    <hr class="my-4" />

    <div class="row">
        <div class="col-12">
            <h4 class="mb-3">Products</h4>

            @if (Model.Products == null || !Model.Products.Any())
            {
                <p class="text-muted">No products available in this category.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.Name</td>
                                    <td>@(string.IsNullOrEmpty(product.Description) ? "N/A" : product.Description)</td>
                                    <td>$@product.Price</td>
                                    <td>
                                        <span class="badge @(product.IsActive ? "bg-success" : "bg-danger")">
                                            @(product.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
}
