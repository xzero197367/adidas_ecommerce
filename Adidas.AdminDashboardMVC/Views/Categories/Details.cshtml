@model Adidas.DTOs.Separator.Category_DTOs.CategoryDto

@{
    ViewData["Title"] = "Category Details: " + Model.Name;
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-folder2-open text-primary me-2"></i>
            Category Details: @Model.Name
        </h2>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id" class="btn btn-warning" title="Edit Category">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
            <a asp-action="Index" asp-controller="Categories" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Category Info -->
    <div class="card p-4 shadow-sm rounded-3 mb-4">
        <div class="row">
            <!-- Image -->
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Category Image" class="img-fluid rounded border shadow-sm mb-3" style="max-width: 250px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-light text-muted d-flex align-items-center justify-content-center rounded border mb-3" style="max-width: 250px; height: 200px; margin: 0 auto;">
                        <i class="bi bi-image text-secondary fs-1"></i>
                    </div>
                }
                <p class="h5 mb-1 mt-2 fw-bold">@Model.Name</p>
                <small class="text-muted">Slug: @Model.Slug</small>
            </div>

            <!-- Details -->
            <div class="col-md-8">
                <dl class="row mb-4">
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") px-3 py-2">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>

                    <dt class="col-sm-3">Sort Order:</dt>
                    <dd class="col-sm-9">@Model.SortOrder</dd>

                    <dt class="col-sm-3">Parent Category:</dt>
                    <dd class="col-sm-9">
                        @if (Model.ParentCategory != null)
                        {
                            <a asp-action="Details" asp-controller="Categories" asp-route-id="@Model.ParentCategory.Id" class="fw-bold">
                                @Model.ParentCategory.Name
                            </a>
                            <small class="text-muted">(@Model.ParentCategory.Slug)</small>
                        }
                        else
                        {
                            <span class="fw-light text-muted">None (Main Category)</span>
                        }
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Subcategories Section (Only if No Parent) -->
    @if (Model.ParentCategory == null)
    {
        <div class="card shadow-sm rounded-3 p-3 mb-4">
            <h4 class="mb-3"><i class="bi bi-list-nested text-primary me-2"></i> Subcategories</h4>
            @if (Model.SubCategories != null && Model.SubCategories.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>IMAGE</th>
                                <th>NAME</th>
                                <th>DESCRIPTION</th>
                                <th>SLUG</th>
                                <th>SORT ORDER</th>
                                <th>STATUS</th>
                                <th>ACTIONS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var subCategory in Model.SubCategories)
                            {
                                <tr>
                                    <td>
                                        <img src="@(!string.IsNullOrEmpty(subCategory.ImageUrl) ? subCategory.ImageUrl : "https://via.placeholder.com/50")"
                                             alt="@subCategory.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                    </td>
                                    <td><strong>@subCategory.Name</strong><br /><small>Sub-category</small></td>
                                    <td class="text-truncate" style="max-width: 250px;">
                                        @(string.IsNullOrEmpty(subCategory.Description) ? "N/A" :
                                            (subCategory.Description.Length > 50 ? subCategory.Description.Substring(0, 50) + "..." : subCategory.Description))
                                    </td>
                                    <td>@subCategory.Slug</td>
                                    <td>@subCategory.SortOrder</td>
                                    <td>
                                        <span class="badge @(subCategory.IsActive ? "bg-success" : "bg-danger")">
                                            @(subCategory.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td class="text-nowrap">
                                        <a asp-action="Details" asp-controller="Categories" asp-route-id="@subCategory.Id" class="btn btn-sm btn-outline-info me-1">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-controller="Categories" asp-route-id="@subCategory.Id" class="btn btn-sm btn-outline-warning me-1">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@subCategory.Id">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal-@subCategory.Id" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">Confirm Delete Subcategory</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                Are you sure you want to delete <strong>@subCategory.Name</strong>?
                                                @if (subCategory.SubCategories?.Count > 0)
                                                {
                                                    <div class="alert alert-warning mt-2">
                                                        <i class="bi bi-exclamation-triangle"></i> This will also delete @subCategory.SubCategories.Count nested subcategories.
                                                    </div>
                                                }
                                                <p class="text-danger mt-2">This action cannot be undone.</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                <form asp-action="Delete" method="post">
                                                    <input type="hidden" name="id" value="@subCategory.Id" />
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash me-1"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No subcategories for this category.</p>
            }
        </div>
    }

    <!-- Products Section -->

    @if(Model.ParentCategoryId!=null){
    <div class="card shadow-sm rounded-3 p-3">
        <h4 class="mb-3"><i class="bi bi-box-seam text-primary me-2"></i> Products</h4>
        @if (Model.Products == null || !Model.Products.Any())
        {
            <p class="text-muted">No products available in this category.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th class="text-end">Price</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@(string.IsNullOrEmpty(product.Description) ? "N/A" : product.Description)</td>
                                <td class="text-end">$@product.Price.ToString("F2")</td>
                                <td>
                                    <span class="badge @(product.IsActive ? "bg-success" : "bg-danger")">
                                        @(product.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
    }

</div>
