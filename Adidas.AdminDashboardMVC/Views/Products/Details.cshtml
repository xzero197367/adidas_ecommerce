@model Adidas.DTOs.Main.Product_DTOs.ProductDto
@using Microsoft.AspNetCore.Http
<link href="~/css/Product.css" rel="stylesheet" />

<div class="container-fluid py-4">

    <!-- Product Header Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-4">
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <img src="@Model.Images.First().ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Name" />
                    }
                    else
                    {
                        <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height:250px;">
                            <div class="text-center">
                                <i class="fas fa-image fa-3x text-muted mb-2"></i>
                                <p class="text-muted small mb-0">No Product Image</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-8">
                    <h2 class="fw-bold mb-2">@Model.Name</h2>
                    <p class="text-muted">@Model.Description</p>

                    <div class="mb-3">
                        <span class="badge bg-info me-2">Category: @Model.CategoryName</span>
                        @* <span class="badge bg-secondary">Brand: @Model.BrandName</span> *@
                    </div>

                    <div class="mb-3">
                        <span class="h4 text-dark fw-bold">@Model.DisplayPrice.ToString("C")</span>
                        @if (Model.IsOnSale)
                        {
                            <span class="text-muted text-decoration-line-through ms-2">@Model.Price.ToString("C")</span>
                        }
                    </div>

                    <div class="mb-3">
                        <i class="fas fa-star text-warning"></i>
                        <span class="fw-bold">@Model.AverageRating.ToString("0.0")</span>
                        <small class="text-muted">(@Model.ReviewCount reviews)</small>
                    </div>

                    <div class="mt-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                        <a asp-controller="ProductVariants" asp-action="Create" asp-route-productId="@Model.Id" class="btn btn-success">
                            <i class="fas fa-plus me-1"></i> Add New Variant
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Variants Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="fw-bold text-dark">Variants</h3>
            <p class="text-muted mb-0">Manage and view all product variants</p>
        </div>
        <div class="text-end">
            <span class="badge bg-primary fs-6">@Model.Variants.Count() Total Variants</span>
        </div>
    </div>

    <!-- Search Section -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body p-4">
            <form method="get" asp-action="Details" asp-route-id="@Model.Id" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group input-group-lg">
                        <input type="text"
                               name="sku"
                               class="form-control border-start-0"
                               placeholder="Search by SKU"
                               value="@Context.Request.Query["sku"]" />
                    </div>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-lg w-100 btn-search">
                        <i class="fas fa-search me-2"></i>Search Variants
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Variants Grid -->
    <div class="row g-4">
        @if (!Model.Variants.Any())
        {
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No variants found</h4>
                    <p class="text-muted">Try adjusting your search criteria or add new variants.</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var variant in Model.Variants)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card border-0 shadow-sm h-100 variant-card position-relative">

                        <!-- Stock Status Badge -->
                        <div class="position-absolute top-0 end-0 m-3 z-index-1">
                            @if (variant.StockQuantity > 10)
                            {
                                <span class="badge bg-success">In Stock</span>
                            }
                            else if (variant.StockQuantity > 0)
                            {
                                <span class="badge bg-warning">Low Stock</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Out of Stock</span>
                            }
                        </div>

                        <!-- Product Image -->
                        <div class="position-relative overflow-hidden" style="height: 250px;">
                            @if (variant.Images != null && variant.Images.Any())
                            {
                                <img src="@variant.Images.First().ImageUrl"
                                     class="card-img-top variant-image"
                                     alt="@Model.Name - @variant.Color"
                                     style="height: 100%; object-fit: cover; transition: transform 0.3s ease;" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center h-100 bg-light">
                                    <div class="text-center">
                                        <i class="fas fa-image fa-2x text-muted mb-2"></i>
                                        <p class="text-muted small mb-0">No Image</p>
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="card-body p-4">

                            <!-- SKU Header -->
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0 fw-bold">SKU: @variant.Sku</h5>
                                <div class="text-end">
                                    <span class="h5 text-primary mb-0 fw-bold">@variant.PriceAdjustment.ToString("C")</span>
                                    <small class="text-muted d-block">Price Adj.</small>
                                </div>
                            </div>

                            <!-- Variant Details -->
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-ruler-combined text-muted me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Size</small>
                                            <span class="fw-medium">@variant.Size</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-palette text-muted me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Color</small>
                                            <span class="fw-medium">@variant.Color</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Stock Information -->
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <small class="text-muted">Stock Quantity</small>
                                    <span class="fw-bold">@variant.StockQuantity units</span>
                                </div>
                                <div class="progress" style="height: 6px;">
                                    @{
                                        var stockPercentage = Math.Min(100, (variant.StockQuantity / 50.0) * 100);
                                        var progressClass = variant.StockQuantity > 10 ? "bg-success" :
                                        variant.StockQuantity > 0 ? "bg-warning" : "bg-danger";
                                    }
                                    <div class="progress-bar @progressClass"
                                         role="progressbar"
                                         style="width: @stockPercentage%"></div>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="d-grid gap-2">
                                <div class="btn-group">
                                    <a asp-controller="ProductVariants"
                                       asp-action="Edit"
                                       asp-route-id="@variant.Id"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-edit me-1"></i>Edit
                                    </a>
                                </div>
                                <form method="post"
                                      asp-action="DeleteVariant"
                                      asp-route-id="@variant.Id"
                                      asp-route-productId="@Model.Id"
                                      onsubmit="return confirm('⚠️ Are you sure you want to delete this variant?\n\nSKU: @variant.Sku\nColor: @variant.Color\nSize: @variant.Size\n\nThis action cannot be undone.');"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                        <i class="fas fa-trash me-1"></i>Delete Variant
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .variant-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 12px;
    }

        .variant-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
        }

    .variant-image:hover {
        transform: scale(1.05);
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.5rem 0.75rem;
        border-radius: 20px;
    }

    .progress {
        border-radius: 10px;
        background-color: #e9ecef;
    }

    .progress-bar {
        border-radius: 10px;
    }

    .btn-outline-primary:hover,
    .btn-outline-info:hover,
    .btn-outline-danger:hover {
        transform: translateY(-1px);
    }

    .z-index-1 {
        z-index: 1;
    }
  
    .card-body {
        padding: 1rem !important;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Search loading state
        const searchForm = document.querySelector('form[method="get"]');
        const searchButton = searchForm?.querySelector('button[type="submit"]');
        if (searchForm && searchButton) {
            searchForm.addEventListener('submit', function() {
                searchButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Searching...';
                searchButton.disabled = true;
            });
        }

        // Delete button loading state
        const deleteForms = document.querySelectorAll('form[asp-action="DeleteVariant"]');
        deleteForms.forEach(form => {
            form.addEventListener('submit', function() {
                const button = this.querySelector('button[type="submit"]');
                button.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Deleting...';
                button.disabled = true;
            });
        });
    });
</script>
