@model Adidas.DTOs.Separator.Brand_DTOs.BrandUpdateDto

@{
    ViewData["Title"] = "Edit Brand";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded-lg">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0">Edit Brand</h3>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-controller="Brands" asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="LogoUrl" /> @* Used to keep track of the old image for deletion *@

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Brand Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label" for="LogoImageFile">Logo Image</label>
                            <input type="file" name="LogoImageFile" id="LogoImageFile" class="form-control" accept="image/*" />
                            <span asp-validation-for="LogoUrl" class="text-danger"></span>
                            <small class="form-text text-muted">Upload a new image to replace the old one (Max file size: 5MB)</small>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.LogoUrl))
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Logo</label>
                                <div>
                                    <img src="@Model.LogoUrl" alt="Current Brand Logo" class="img-thumbnail" style="width: 100px; height: 100px; object-fit: cover;" />
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4 border-top pt-3">
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
