@model Adidas.DTOs.Separator.Category_DTOs.CategoryDto

@{
    ViewData["Title"] = "Subcategory Details: " + Model.Name;
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-folder text-secondary me-2"></i>
            Subcategory Details: @Model.Name
        </h2>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-controller="Subcategories" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil me-1"></i> Edit
            </a>
            <a asp-action="Index" asp-controller="Subcategories" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to List
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Subcategory Info -->
    <div class="card p-4 shadow-sm rounded-3 mb-4">
        <div class="row">
            <!-- Image -->
            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Subcategory Image" class="img-fluid rounded border shadow-sm mb-3" style="max-width: 250px; object-fit: cover;" />
                }
                else
                {
                    <div class="bg-light text-muted d-flex align-items-center justify-content-center rounded border mb-3" style="max-width: 250px; height: 200px; margin: 0 auto;">
                        <i class="bi bi-image text-secondary fs-1"></i>
                    </div>
                }
                <p class="h5 mb-1 mt-2 fw-bold">@Model.Name</p>
                <small class="text-muted">Slug: @Model.Slug</small>
                <br />
                <span class="badge bg-secondary mt-2">Subcategory</span>
            </div>

            <!-- Details -->
            <div class="col-md-8">
                <dl class="row mb-4">
                    <dt class="col-sm-3">Description:</dt>
                    <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</dd>

                    <dt class="col-sm-3">Status:</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") px-3 py-2">
                            @(Model.IsActive ? "Active" : "Inactive")
                        </span>
                    </dd>

                    <dt class="col-sm-3">Parent Category:</dt>
                    <dd class="col-sm-9">
                        @if (Model.ParentCategory != null)
                        {
                            <a asp-action="Details" asp-controller="MainCategories" asp-route-id="@Model.ParentCategory.Id" class="fw-bold text-primary">
                                @Model.ParentCategory.Name
                            </a>
                            <small class="text-muted">(@Model.ParentCategory.Slug)</small>
                        }
                        else
                        {
                            <span class="fw-light text-muted">Unknown Parent</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created:</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</dd>

                    <dt class="col-sm-3">Last Updated:</dt>
                    <dd class="col-sm-9">@Model.UpdatedAt.ToString("MMM dd, yyyy 'at' hh:mm tt")</dd>
                    

                    <dt class="col-sm-3">Total Products:</dt>
                    <dd class="col-sm-9">
                        <span class="badge bg-info">@Model.ProductsCount products</span>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <!-- Products Section -->
    <div class="card shadow-sm rounded-3 p-3">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4 class="mb-0">
                <i class="bi bi-box-seam text-primary me-2"></i>
                Products (@Model.ProductsCount)
            </h4>
        </div>

        @if (Model.Products == null || !Model.Products.Any())
        {
            <div class="text-center py-4">
                <i class="bi bi-box text-muted fs-1"></i>
                <p class="text-muted mt-2">No products available in this subcategory yet.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>IMAGE</th>
                            <th>NAME</th>
                            <th>DESCRIPTION</th>
                            <th>PRICE</th>
                            <th>SALE PRICE</th>
                            <th>IN STOCK</th>
                            <th>STATUS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>
                                    @if (product.Images != null && product.Images.Any())
                                    {
                                        <img src="@product.Images.First().ImageUrl" alt="@product.Name" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        <img src="https://via.placeholder.com/50" alt="No Image" class="img-thumbnail" style="width: 50px; height: 50px; object-fit: cover;" />
                                    }
                                </td>
                                <td>
                                    <strong>@product.Name</strong>
                                    @if (!string.IsNullOrEmpty(product.Sku))
                                    {
                                        <br />
                            
                                        <small class="text-muted">SKU: @product.Sku</small>
                                    }
                            </td>
                            <td class="text-truncate" style="max-width: 200px;">
                                @(string.IsNullOrEmpty(product.Description) ? "N/A" :
                                                            (product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description))
                        </td>
                        <td class="text-end">
                            <strong>${@product.Price.ToString("F2")}</strong>
                        </td>
                        <td class="text-end">
                            @if (product.SalePrice.HasValue && product.SalePrice > 0)
                                    {
                                        <span class="text-danger">
                                            <strong>${@product.SalePrice.Value.ToString("F2")}</strong>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (product.InStock)
                                    {
                                        <span class="badge bg-success">In Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Out of Stock</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(product.IsActive ? "bg-success" : "bg-danger")">
                                        @(product.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>