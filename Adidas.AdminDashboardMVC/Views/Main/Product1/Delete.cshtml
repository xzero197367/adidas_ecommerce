@model Adidas.DTOs.Main.Product_DTOs.ProductDto;

@{
    ViewData["Title"] = "Delete Product";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-trash-alt me-2"></i>Delete Product
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this
                        product?
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            @if (Model.Images != null && Model.Images.Any())
                            {
                                <img src="@Model.Images.First().ImageUrl" alt="@Model.Name"
                                     class="img-fluid rounded shadow-sm"/>
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                     style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Product Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">$@Model.Price.ToString("F2")</dd>

                                @if (Model.SalePrice.HasValue)
                                {
                                    <dt class="col-sm-4">Sale Price:</dt>
                                    <dd class="col-sm-8">$@Model.SalePrice.Value.ToString("F2")</dd>
                                }

                                <dt class="col-sm-4">Category:</dt>
                                <dd class="col-sm-8">@Model.Category?.Name</dd>

                                <dt class="col-sm-4">Brand:</dt>
                                <dd class="col-sm-8">@Model.Brand?.Name</dd>

                                <dt class="col-sm-4">Gender Target:</dt>
                                <dd class="col-sm-8">@Model.GenderTarget</dd>

                                <dt class="col-sm-4">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-secondary")">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </dd>
                            </dl>

                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <div class="mt-3">
                                    <strong>Description:</strong>
                                    <p class="mt-2">@Model.Description</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <form asp-action="Delete" asp-controller="Product1" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id"/>
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="fas fa-trash-alt me-1"></i>Confirm Delete
                        </button>
                    </form>
                    <a asp-action="Index" asp-controller="Product1" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>