@using Adidas.DTOs.Main.Product_DTOs
@model List<Adidas.DTOs.Main.ProductAttributeDTOs.ProductAttributeDto>

@{
    ViewData["Title"] = $"Manage Attributes - {ViewBag.Product.Name}";
    // Layout = "~/Views/Shared/_Layout.cshtml";
    var product = ViewBag.Product as ProductDto;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-tags me-2"></i>Manage Product Attributes - @product.Name
                        </h3>
                        <button class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#addAttributeModal">
                            <i class="fas fa-plus me-1"></i>Add Attribute
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Attribute Name</th>
                                        <th>Data Type</th>
                                        <th>Sort Order</th>
                                        <th>Filterable</th>
                                        <th>Required</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var attribute1 in Model.OrderBy(a => a.SortOrder))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@attribute1.Name</strong>
                                            </td>
                                            <td>@attribute1.DataType</td>
                                            <td>
                                                <span class="badge bg-info">@attribute1.SortOrder</span>
                                            </td>
                                            <td>
                                                <span class="badge @(attribute1.IsFilterable ? "bg-success" : "bg-secondary")">
                                                    @(attribute1.IsFilterable ? "Yes" : "No")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge @(attribute1.IsRequired ? "bg-success" : "bg-secondary")">
                                                    @(attribute1.IsRequired ? "Yes" : "No")
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button class="btn btn-outline-primary" onclick="editAttribute('@attribute1.Id')" title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger" onclick="deleteAttribute('@attribute1.Id')" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-tags fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No attributes found</h5>
                            <p class="text-muted">Add your first product attribute to get started.</p>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAttributeModal">
                                <i class="fas fa-plus me-1"></i>Add First Attribute
                            </button>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info me-2">
                        <i class="fas fa-eye me-1"></i>View Product
                    </a>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary me-2">
                        <i class="fas fa-edit me-1"></i>Edit Product
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i>Back to Products
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

