@section Scripts {
    <script>
        // Load recent activity on page load
        document.addEventListener('DOMContentLoaded', function() {
            loadRecentActivity();
        });

        function loadRecentActivity() {
            fetch('/Admin/RecentActivity')
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('recentActivity');
                    
                    if (data && data.length > 0) {
                        let html = '<div class="timeline">';
                        
                        data.forEach((activity, index) => {
                            const timeAgo = moment(activity.timestamp).fromNow();
                            const iconClass = getActivityIcon(activity.type);
                            
                            html += `
                                <div class="timeline-item ${index === data.length - 1 ? 'last' : ''}">
                                    <div class="timeline-marker">
                                        <i class="${iconClass}"></i>
                                    </div>
                                    <div class="timeline-content">
                                        <h6 class="timeline-title">${activity.title}</h6>
                                        <p class="timeline-text">${activity.description}</p>
                                        <small class="text-muted">${timeAgo}</small>
                                        ${activity.link ? `<a href="${activity.link}" class="btn btn-sm btn-outline-primary ms-2">View</a>` : ''}
                                    </div>
                                </div>
                            `;
                        });
                        
                        html += '</div>';
                        container.innerHTML = html;
                    } else {
                        container.innerHTML = `
                            <div class="text-center py-4">
                                <i class="fas fa-clock fa-2x text-muted mb-3"></i>
                                <p class="text-muted">No recent activity</p>
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Error loading recent activity:', error);
                    document.getElementById('recentActivity').innerHTML = `
                        <div class="text-center py-4">
                            <i class="fas fa-exclamation-triangle fa-2x text-danger mb-3"></i>
                            <p class="text-muted">Error loading recent activity</p>
                        </div>
                    `;
                });
        }

        function showStockAlerts() {
            const modal = new bootstrap.Modal(document.getElementById('stockAlertsModal'));
            modal.show();
            
            fetch('/Admin/StockAlerts')
                .then(response => response.json())
                .then(data => {
                    const container = document.getElementById('stockAlertsList');
                    
                    if (data && data.length > 0) {
                        let html = '<div class="table-responsive"><table class="table"><thead><tr><th>Product</th><th>Variant</th><th>SKU</th><th>Stock</th><th>Action</th></tr></thead><tbody>';
                        
                        data.forEach(alert => {
                            const statusBadge = alert.status === 'out_of_stock' 
                                ? '<span class="badge bg-danger">Out of Stock</span>'
                                : `<span class="badge bg-warning">${alert.stock} left</span>`;
                                
                            html += `
                                <tr>
                                    <td>${alert.productName}</td>
                                    <td>${alert.variant}</td>
                                    <td><code>${alert.sku}</code></td>
                                    <td>${statusBadge}</td>
                                    <td><a href="${alert.link}" class="btn btn-sm btn-outline-primary">Edit</a></td>
                                </tr>
                            `;
                        });
                        
                        html += '</tbody></table></div>';
                        container.innerHTML = html;
                    } else {
                        container.innerHTML = `
                            <div class="text-center py-4">
                                <i class="fas fa-check-circle fa-2x text-success mb-3"></i>
                                <p class="text-muted">All items are well stocked!</p>
                            </div>
                        `;
                    }
                })
                .catch(error => {
                    console.error('Error loading stock alerts:', error);
                    document.getElementById('stockAlertsList').innerHTML = `
                        <div class="text-center py-4">
                            <i class="fas fa-exclamation-triangle fa-2x text-danger mb-3"></i>
                            <p class="text-muted">Error loading stock alerts</p>
                        </div>
                    `;
                });
        }

        function refreshDashboard() {
            location.reload();
        }

        function getActivityIcon(type) {
            const icons = {
                'product_created': 'fas fa-plus-circle text-success',
                'variant_created': 'fas fa-layer-group text-info',
                'stock_updated': 'fas fa-boxes text-warning',
                'order_received': 'fas fa-shopping-cart text-primary',
                'default': 'fas fa-circle text-secondary'
            };
            
            return icons[type] || icons['default'];
        }
    </script>

    <!-- Add Moment.js for time formatting -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    
    <style>
        .border-left-primary { border-left: 0.25rem solid #4e73df !important; }
        .border-left-success { border-left: 0.25rem solid #1cc88a !important; }
        .border-left-warning { border-left: 0.25rem solid #f6c23e !important; }
        .border-left-danger { border-left: 0.25rem solid #e74a3b !important; }
        
        .timeline {
            position: relative;
            padding-left: 2rem;
        }
        
        .timeline::before {
            content: '';
            position: absolute;
            left: 15px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #e3e6f0;
        }
        
        .timeline-item {
            position: relative;
            margin-bottom: 2rem;
        }
        
        .timeline-item.last {
            margin-bottom: 0;
        }
        
        .timeline-marker {
            position: absolute;
            left: -2.25rem;
            top: 0;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            background: white;
            border: 2px solid #e3e6f0;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 12px;
        }
        
        .timeline-content {
            background: #f8f9fc;
            padding: 1rem;
            border-radius: 0.375rem;
            border: 1px solid #e3e6f0;
        }
        
        .timeline-title {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }
        
        .timeline-text {
            font-size: 13px;
            margin-bottom: 0.5rem;
            color: #5a5c69;
        }
    </style>
}